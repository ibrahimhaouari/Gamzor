<!DOCTYPE html>
<html lang="en" data-theme="@theme">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="css/app.css" />
    @* <link rel="stylesheet" href="Gamzor.styles.css" /> *@
    <link rel="icon" type="image/png" href="favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;400;500;600;700;800&family=Poppins:wght@200;300;400;500;600;700;800&family=Roboto+Mono:wght@400;700&display=swap"
        rel="stylesheet">
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@inject IHttpContextAccessor HttpContextAccessor
@code {
    string theme = string.Empty;
    protected override void OnInitialized()
    {
        var value = HttpContextAccessor.HttpContext?.Request.Cookies["theme"];
        if (!string.IsNullOrEmpty(value))
        {
            theme = value;
        }
    }
}
